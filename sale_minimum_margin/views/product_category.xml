<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="product_category_form_with_minimum_margin" model="ir.ui.view">
        <field name="name">Product Category Form: Add the minimum margin</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <sheet position="inside">
                <group name="minimum_margin_group">
                    <field name="minimum_margin" widget="percentage"/>
                </group>
            </sheet>
        </field>
    </record>

</odoo>
