<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_picking_form_with_is_rental_delivery" model="ir.ui.view">
        <field name="name">Stock Picking With Is Rental Delivery</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <form position="inside">
                <field name="is_rental_delivery" invisible="1"/>
            </form>
        </field>
    </record>

    <record id="view_picking_form_with_rental_return_button" model="ir.ui.view">
        <field name="name">Stock Picking With Rental Return Button</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="view_picking_form_with_is_rental_delivery"/>
        <field name="arch" type="xml">
        	<button name="%(stock.act_stock_return_picking)d" position="after">
        		<button type="object" name="open_rental_return_wizard" string="Return Products"
        			attrs="{'invisible': ['|', ('state', '!=', 'done'), ('is_rental_delivery', '=', False)]}"/>
        	</button>

        	<button name="%(stock.act_stock_return_picking)d" position="attributes">
        		<attribute name="attrs">{
        			'invisible': [
        				'|', '|',
        				('state', '!=', 'done'), ('is_locked', '=', False),
        				('is_rental_delivery', '=', True),
        			]
        		}</attribute>
        	</button>
        </field>
    </record>

    <record id="view_picking_form_with_rental_returned_quantity" model="ir.ui.view">
        <field name="name">Stock Picking With Rental Returned Quantity</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="view_picking_form_with_is_rental_delivery"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_lines']//field[@name='quantity_done']" position="after">
                <field name="rental_returned_quantity"
                    attrs="{'column_invisible': ['|', ('parent.is_rental_delivery', '=', False), ('parent.state', '!=', 'done')]}"/>
            </xpath>
        </field>
    </record>

</odoo>