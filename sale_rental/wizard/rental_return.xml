<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="rental_return_wizard_form" model="ir.ui.view">
        <field name="name">Rental Return Form</field>
        <field name="model">rental.return.wizard</field>
        <field name="arch" type="xml">
            <form string="Return Rented Products">
                <group>
                    <field name="line_ids" nolabel="1">
                        <tree editable="0" create="0" delete="1">
                            <field name="product_id"/>
                            <field name="lot_id"/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <button name="process_rental_return" string="Process Return" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
