<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_website_sale_request_price_setting" model="ir.ui.view">
        <field name="name">Res Config Settings: Website Sale Request Price Setting</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='sale_pricing_settings']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="website_sale_request_price_setting">
                    <div class="o_setting_left_pane">
                        <field name="website_sale_request_price"/>
                    </div>
                    <div class="o_setting_right_pane" >
                        <label string="Website Sale Request Price" for="website_sale_request_price"/>
                        <div class="text-muted">
                            Hide prices from a threshold and allow to request for quotation
                        </div>
                        <div class="content-group" attrs="{'invisible': [('website_sale_request_price', '=', False)]}" >
                            <div class="mt16" >
                                <label string="Threshold" for="website_sale_request_price_threshold" class="o_light_label"/>
                                <field name="website_sale_request_price_threshold" class="oe_inline" required="True"/>
                            </div>
                            <div class="mt16">
                                <label string="Mail Template" for="website_sale_request_price_mail_template" class="o_light_label"/>
                                <field name="website_sale_request_price_mail_template" class="oe_inline" required="True"/>
                            </div>
                            <div class="mt16">
                                <label string="Sales Team" for="website_sale_request_price_sales_team" class="o_light_label"/>
                                <field name="website_sale_request_price_sales_team" class="oe_inline" required="True"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
