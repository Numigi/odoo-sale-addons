<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_form" model="ir.ui.view">
        <field name="name">Res Config Settings: Add default interco service</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div name="multi_company" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="sale_intercompany_service_settings">
                    <div class="o_setting_left_pane"></div>
                    <div class="o_setting_right_pane" >
                        <label string="Intercompany Service Discount" for="interco_service_discount"/>
                        <div class="text-muted">
                            Define a global discount on intercompany services
                        </div>
                        <field name="interco_service_discount"/>
                    </div>
                </div>
            </div>
        </field>
    </record>

</odoo>
