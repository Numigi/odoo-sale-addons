<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_double_validation_specific" model="ir.ui.view">
        <field name="name">Sale Order Form: Specific double validation</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="currency_id" position="after">
                <field name="create_date" invisible="0"/>
                <field name="to_approve" invisible="0"/>
            </field>
          <xpath expr="//button[@name='action_confirm'][2]" position="attributes">
             <attribute name="attrs">{'invisible': ['|','|', ('state', 'not in', ['draft']),
                                                            ('create_date', '=', False),
                                                            ('to_approve', '=', True) ]}
             </attribute>
            </xpath>
        </field>
    </record>
    <record id="view_order_form_double_validation_action_paprove" model="ir.ui.view">
    <field name="name">Sale Order Form: Specific double validation action approve</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale_double_validation.view_order_form"/>
     <field name="arch" type="xml">
         <button name="action_approve" position="before">
                <field name="to_approve" invisible="1"/>
         </button>

         <xpath expr="//button[@name='action_approve']" position="attributes">
             <attribute name="attrs">{'invisible': [('to_approve', '=', False)]}</attribute>
             <attribute name="groups">sales_team.group_sale_salesman</attribute>
          </xpath>

    </field>
  </record>
</odoo>
