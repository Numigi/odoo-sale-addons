<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template inherit_id="alan_customize.product_items" id="website_sale_request_price_alan_specific_product_items" name="Product items: hiding price">
        <xpath expr="//div[hasclass('product_price')]/b" position="attributes">
            <attribute name="t-if">not product.is_request_price_required()</attribute>
        </xpath>
    </template>

    <template inherit_id="alan_customize.products_add_to_cart" id="website_sale_request_price_alan_specific_products_add_to_cart" name="Add to Cart: showing Request Price instead of Add to Cart">
        <xpath expr="//t[@t-if='len(product.product_variant_ids) &gt; 1']" position="after">
            <t t-if="product.is_request_price_required() and len(product.product_variant_ids) &gt; 0">
                <a data-toggle="modal"
                   data-target="#modal_request_price"
                   t-att-data-product-id="product.product_variant_ids[0].id"
                   t-att-data-product-display-name="product.product_variant_ids[0].display_name"
                   role="button" class="btn btn-secondary btn-sm"
                   aria-label="Request Price" title="Request Price"
                >
                    <span class="fa fa-usd"/>
                </a>
            </t>
        </xpath>
        <xpath expr="//t[@t-if='len(product.product_variant_ids) == 1']" position="attributes">
            <attribute name="t-if">not product.is_request_price_required() and len(product.product_variant_ids) == 1</attribute>
        </xpath>
        <xpath expr="//t[@t-if='len(product.product_variant_ids) &gt; 1']" position="attributes">
            <attribute name="t-if">not product.is_request_price_required() and len(product.product_variant_ids) &gt; 1</attribute>
        </xpath>
    </template>

    <template inherit_id="alan_customize.pricefilter_product" id="website_sale_request_price_alan_specific_pricefilter_product" name="Hiding price filter">
        <xpath expr="//div[hasclass('slider-price-filter')]" position="replace"/>
    </template>

</odoo>
