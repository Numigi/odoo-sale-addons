<?xml version="1.0"?>
<odoo>
    <data>

        <!--      This actives color on widget forecast icon : green / yellow / red      -->
        <record id="view_order_form_inherit_sale_stock_qty" model="ir.ui.view">
            <field name="name">sale.order.line.tree.sale.stock.qty</field>
            <field name="inherit_id" ref="sale_stock.view_order_form_inherit_sale_stock_qty"/>
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                <xpath expr="//page/field[@name='order_line']/tree/widget[@name='qty_at_date_widget']" position="after">
                    <field name="qty_available" invisible="1"/>
                    <field name="virtual_available" invisible="1" />
                    <field name="free_qty_today" invisible="1"/>
                    <field name="available_qty" invisible="1"/>
                    <field name="reserved_qty" invisible="1"/>
                    <field name="qty_popup_color" invisible="1"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>