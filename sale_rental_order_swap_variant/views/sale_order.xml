<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="sale_order_form" model="ir.ui.view">
        <field name="name">Sale Order Form: add button swap</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_kit.sale_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='kit_initialized']" position="after">
                <field name="allow_change_variant_kit_component" invisible="1"/>
                <button name="%(action_sale_rental_order_swap_variant)d"
                        type="action"
                        icon="fa-exchange"
                        context="{'default_active_product_id': product_id}"
                        attrs="{
                            'invisible': [
                                '|',
                                '|',
                                ('parent.state', 'in', ('done', 'cancel')),
                                ('allow_change_variant_kit_component', '=', False),
                            ]
                        }"
                        />
            </xpath>
        </field>
    </record>

</odoo>
