<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="action_target" model="ir.actions.act_window">
        <field name="name">Targets</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">commission.target</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create your First Target Here !
          </p>
        </field>
    </record>

    <record id="commission_target_tree" model="ir.ui.view">
        <field name="name">commission.target.tree</field>
        <field name="model">commission.target</field>
        <field name="arch" type="xml">
            <tree string="Targets">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="commissions_total"/>
                <field name="already_paid"/>
                <field name="status"/>
            </tree>
        </field>
     </record>

     <record id="commission_target_form" model="ir.ui.view">
        <field name="name">commission.target.form</field>
        <field name="model">commission.target</field>
        <field name="arch" type="xml">
            <form string="Target">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <field name="employee_id"/>
                        <field name="date_range_id"/>
                        <field name="category_id"/>
                    </group>
                    <group>
                        <field name="base_amount"/>
                    </group>
                    <group>
                        <field name="target_amount"/>
                    </group>
                    <group>
                        <field name="rate_type" invisible="1"/>
                        <field name="fixed_rate" attrs="{
                            'invisible':[('rate_type', '=', 'interval')]
                        }"/>
                        <field name="rate_ids" attrs="{
                            'invisible':[('rate_type', '=', 'fixed')]
                        }"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sequence_target_reference" model="ir.sequence">
        <field name="name">Target Reference</field>
        <field name="code">commission.target.reference</field>
        <field name="active">TRUE</field>
        <field name="prefix">CO</field>
        <field name="padding">5</field>
        <field name="number_next">1</field>
        <field name="number_increment">1</field>
    </record>

    <menuitem id="commission_target" name="Targets" parent="commission_root" action="action_target" sequence="10"/>

</odoo>
