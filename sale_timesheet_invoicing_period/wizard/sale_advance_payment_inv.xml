<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="sale_advance_payment_inv_form" model="ir.ui.view">
        <field name="name">Sale Invoicing Wizard: add timesheet period</field>
        <field name="model">sale.advance.payment.inv</field>
        <field name="inherit_id" ref="sale.view_sale_advance_payment_inv"/>
        <field name="arch" type="xml">
            <field name="advance_payment_method" position="after">
                <div colspan="2">
                    <label for="timesheet_date_from" string="Period To Invoice (Timesheets)" class="oe_inline"/>
                    <field name="timesheet_date_from" class="oe_inline" style="margin-left: 16px"/>
                    <span style="margin-left: 16px">to</span>
                    <field name="timesheet_date_to" class="oe_inline" style="margin-left: 16px"/>
                </div>
            </field>
        </field>
    </record>

</odoo>
