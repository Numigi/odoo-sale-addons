<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="action_view_unfinished_pickings" model="ir.actions.act_window">
        <field name="name">Stock Operations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.picking</field>
        <field name="view_mode">list,form</field>
        <field name="view_type">form</field>
        <field name="target">current</field>
        <field name="domain">
            [
                ('state', 'not in', ('done', 'cancel')),
                ('group_id.sale_id', '=', active_id),
            ]
        </field>
        <!-- Group by picking type -->
        <field name="context">
            {
                'search_default_picking_type': 1,
            }
        </field>
    </record>

    <record id="sale_order_form" model="ir.ui.view">
        <field name="name">Sale Order Form: add delivery completion</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_stock.view_order_form_inherit_sale_stock"/>
        <field name="arch" type="xml">
            <button name="action_view_delivery" position="before">
                <button
                    type="action"
                    name="%(action_view_unfinished_pickings)d"
                    class="oe_stat_button"
                    icon="fa-truck"
                    groups="base.group_user"
                    attrs="{'invisible': [('state', 'not in', ('sale', 'done'))]}"
                    >
                    <field name="completion_rate" widget="statinfo" string="Completion"/>
                </button>
            </button>
        </field>
    </record>


    <record id="sale_order_list" model="ir.ui.view">
        <field name="name">Sale Order List: add delivery completion</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <tree position="inside">
                <field name="completion_rate" string="Completion"/>
            </tree>
        </field>
    </record>

</odoo>
