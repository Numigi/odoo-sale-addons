<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="assets_frontend" inherit_id="website.assets_frontend" name="Website Sale Request Price">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/website_sale_request_price/static/src/js/website_sale_request_price.js"></script>
        </xpath>
    </template>

    <template inherit_id="website_sale.product_price" id="website_sale_request_price_product_price" name="Website Sale Request Price: Product Price">
        <xpath expr="//div[hasclass('product_price')]" position="attributes">
            <attribute name="t-att-style">'display: none!important' if product.is_request_price_required() else ''</attribute>
            <attribute name="style">display: none;</attribute>
        </xpath>
    </template>
    <template inherit_id="website_sale.product" id="website_sale_request_price_product" name="Website Sale Request Price Product">
        <xpath expr="//a[@id='add_to_cart']" position="attributes">
            <attribute name="t-att-style">'display: none!important' if product.is_request_price_required() else ''</attribute>
        </xpath>
        <xpath expr="//a[@id='add_to_cart']" position="after">
            <t t-if="product.is_request_price_required()">
                <a role="button" id="request_price" class="btn btn-primary btn-lg mt8 js_check_product" t-attf-action="/shop/product/#{slug(product)}/request_price">Request Price</a>
            </t>
        </xpath>
    </template>

    <template id="request_price_details" name="Request Price Details">
        <div role="dialog" id="modal_request_prices" class="modal fade" tabindex="-1">
            <div class="modal-dialog modal-lg">
                <form id="request_price" t-attf-action="/shop/product/#{slug(product)}/request_price/confirm" method="post" class="js_website_submit_form">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <div class="modal-content">
                        <header class="modal-header">
                            <h4 class="modal-title" id="myModalLabel">
                                <strong>Request Price</strong>
                            </h4>
                        </header>
                        <main class="modal-body">
                            <div class="container">
                                <h4 class="o_page_header mt16">
                                    <strong>
                                        <t t-esc="product.display_name"/><!--TODO: get full name with varient-->
                                    </strong>
                                    <input type="hidden" class="product_id" name="product" t-att-value="product"/>
                                </h4>
                                <t t-set="user" t-value="product.env.user"/>
                                <div t-if="user._is_public()" class="row">
                                    <div class="col-lg-4"><span>Name*</span></div>
                                    <div class="col-lg-5"><span>Email*</span></div>
                                    <div class="col-lg-3"><span>Phone</span></div>
                                </div>
                                <div t-if="user._is_public()" class="row mb4">
                                    <div class="col-lg-4">
                                        <input class="form-control" type="text" name="name" required="This field is required"/>
                                    </div>
                                    <div class="col-lg-5">
                                        <input class="form-control" type="email" name="email" required="This field is required"/>
                                    </div>
                                    <div class="col-lg-3">
                                        <input class="form-control" type="tel" name="phone"/>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12"><span>Additional information</span></div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <input class="form-control" type="tel" name="additional_information"/>
                                    </div>
                                </div>
                            </div>
                        </main>
                        <footer class="modal-footer">
                            <div class="float-right">
                                <button id="confirm_request_price" type="submit" class="btn btn-primary">Confirm</button>
                                <button type="button" class="btn btn-secondary js_goto_event" data-dismiss="modal">Cancel</button>
                            </div>
                        </footer>
                    </div>
                </form>
            </div>
        </div>
    </template>
</odoo>
