<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_stock" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div class="col-12 col-lg-6 o_setting_box" id="down_payments" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="invoice_grouping">
                    <div class="o_setting_right_pane">
                        <label for="invoice_grouping"/>
                        <div class="text-muted">
                            How to automatically group invoices
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="invoice_grouping" class="o_light_label" widget="radio"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>

    </record>
</odoo>
