<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">Product Template Form: show available_threshold on threshold_warning</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="website_sale_stock.product_template_form_view_inherit_website_sale_stock"/>
        <field name="arch" type="xml">
            <field name="available_threshold" position="attributes">
                <attribute name="attrs">{
                    'invisible': [
                        '|',
                        ('type', '!=', 'product'),
                        ('inventory_availability', 'not in', ('threshold', 'threshold_warning')),
                    ],
                    'required': [
                        ('type', '=', 'product'),
                        ('inventory_availability', '=', 'threshold'),
                    ],
                }</attribute>
            </field>
        </field>
    </record>

    <record id="product_template_form_with_available_quantity" model="ir.ui.view">
        <field name="name">Product Form: show extra availability fields</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.view_template_property_form"/>
        <field name="arch" type="xml">
            <group name="operations" position="inside">
                <field name="sale_availability"/>
                <field name="replenishment_availability"/>
                <field name="replenishment_delay"/>
            </group>
        </field>
    </record>

</odoo>
