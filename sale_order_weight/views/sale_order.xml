<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_order_form_with_weight" model="ir.ui.view">
        <field name="name">Sale Order Form: add weight</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="priority">30</field>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='sale_total']" position="after">
                <group name="sale_weight" class="oe_subtotal_footer" style="float: left !important;">
                    <field name="weight_in_kg"/>
                    <field name="weight_in_lb"/>
                </group>
            </xpath>
            <xpath expr="//field[@name='note']" position="attributes">
                <attribute name="style">display: block; clear: both</attribute>
            </xpath>
        </field>
    </record>

</odoo>
