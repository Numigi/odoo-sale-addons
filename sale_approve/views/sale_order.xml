<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_double_validation_specific" model="ir.ui.view">
        <field name="name">Sale Order Form: Specific double validation</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="currency_id" position="after">

                <field name="to_approve" invisible="1"/>
                 <field name="to_confirm" invisible="1"/>

            </field>
            <button name="action_confirm" position="before">

                 <button name="action_approve"
                        type="object"
                        string="Approve request"
                        class="oe_highlight"
                        attrs="{'invisible': [('to_approve', '=', False)]}"
                        groups="sales_team.group_sale_salesman"
                        />
            </button>

            <xpath expr="//button[@name='action_confirm'][2]" position="attributes">
                <attribute name="attrs">{'invisible': [ ('to_confirm', '=', False) ]} </attribute>
            </xpath>
        </field>
    </record>

</odoo>
